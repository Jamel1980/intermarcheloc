{% extends "base.html.twig" %}

{% block title %}Modifier mes informations{% endblock %}

{% block stylesheets %}
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

      body {
        font-family: 'Roboto', sans-serif;
        background-image: url(https://www.oktalite.com/fileadmin/referenzen/food/intermarche-conches-en-ouche-frankreich/food-intermarche-conches-en-ouche-eingang-oktalite-10-slider.jpg);
        background-size:cover;
        background-attachment:fixed;
        margin: 0;
        padding: 0;
      }
      .card-account-info {
        max-width: 40rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 15px;
        overflow: hidden;
        font-size:1rem;
      }
      .card-header {
        font-size: 1.5rem;
        margin: 0;
        color: white;
      }
      .card-account-info .card-header {
        background-color: #343a40;
        color: white;
        font-weight: 500;
        border-radius: 15px 15px 0 0;
        padding: 1rem;
      }
      .card-account-info .card-body {
        padding: 2rem;
      }
      .card-title {
        font-weight: 700;
        color: #343a40;
      }
      .card-text {
        font-weight: 400;
        color: #6c757d;
        
      }
      .btn-custom {
        background-color: #007bff;
        color: white;
        border-radius: 10px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: background-color 0.3s ease;
      }
      .btn-custom:hover {
        background-color: black;
        color: white;
      }
      .container {
        max-width: 1000px; /* Largeur maximale du conteneur */
        padding: 1rem;
      }
      .form-group {
        margin-bottom: 1.5rem;
      }
      .form-control {
        border-radius: 0.5rem;
      }
      .container {
        max-width: 900px;
      }
    </style>
{% endblock %}

{% block body %}
{% if app.user %}
<div class="container my-5">

  <h1 class="text-center text-light mb-4">Modifier mes informations</h1>
  
  <div class="card card-account-info mx-auto">
    <div class="card-header text-center">INFORMATIONS DU COMPTE</div>
    <div class="card-body">

      {{ form_start(profileditForm) }}
        <div class="form-group">
          {{ form_label(profileditForm.nom) }}
          {{ form_widget(profileditForm.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(profileditForm.prenom) }}
          {{ form_widget(profileditForm.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(profileditForm.pseudo) }}
          {{ form_widget(profileditForm.pseudo, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(profileditForm.plainPassword) }}
          {{ form_widget(profileditForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-custom btn-block mt-3">Enregistrer les modifications</button>
      {{ form_end(profileditForm) }}
    </div>
  </div>

</div>
{% endif %}
{% endblock %}
