        <style>
        /* Ajout des styles pour le survol pour le menu*/
        .nav-link {
            font-family: 'Lato', sans-serif;
            font-size: 15px;
            color: white !important; /* Couleur par défaut */
            transition: color 0.3s ease; /* Pour une transition en douceur */
        }
        .nav-link:hover {
            color: red !important; /* Couleur au survol */
        }
         /* Styles pour le dropdown */
        .dropdown-toggle {
            background-color: #343a40 !important; /* Couleur de fond identique à celle du menu */
            color: inherit; /* Couleur par défaut des liens */
            
        }
        .dropdown-toggle:hover {
            color: red !important; /* Couleur au survol */
        }
        .dropdown-menu {
            background-color: #343a40; /* Couleur de fond du menu déroulant */
            
        }
        .dropdown-item {
            color: white; /* Couleur par défaut des liens dans le menu déroulant */
        }
        .dropdown-item:hover {
            color: red !important; /* Couleur au survol des liens dans le menu déroulant */
            background-color: transparent !important; /* Conserver le fond transparent */
        }
        </style>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
